{
  "name": "node-test",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "rm -rf ./node_modules & npm ci",
    "sum": "node main.js 0 1 2",
    "subtract": "node main.js 1 1 2",
    "multiply": "node main.js 2 1 2",
    "divide": "node main.js 3 1 2",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --silent --coverage"
  },
  "author": "",
  "license": "ISC",
  "jest": {
    "verbose": true,
    "coverageDirectory": "./build",
    "collectCoverageFrom": [
      "**.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "jest-junit"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.14.3",
    "@babel/preset-env": "7.14.2",
    "babel-jest": "26.6.3",
    "jest": "24.7.1",
    "jest-junit": "6.3.0"
  }
}
